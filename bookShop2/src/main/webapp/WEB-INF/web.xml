<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>
            org.springframework.web.filter.CharacterEncodingFilter
    </filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/spring/mybatis-context.xml</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>appServlet</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/spring/appServlet/servlet-context.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>appServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>BoardController</display-name>
    <servlet-name>BoardController</servlet-name>
    <servlet-class>com.bookshop01.board.controller.BoardController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BoardController</servlet-name>
    <url-pattern>/BoardController</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>BoardControllerImpl</display-name>
    <servlet-name>BoardControllerImpl</servlet-name>
    <servlet-class>com.bookshop01.board.controller.BoardControllerImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BoardControllerImpl</servlet-name>
    <url-pattern>/BoardControllerImpl</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>BoardServiceImpl</display-name>
    <servlet-name>BoardServiceImpl</servlet-name>
    <servlet-class>com.bookshop01.board.service.BoardServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BoardServiceImpl</servlet-name>
    <url-pattern>/BoardServiceImpl</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>ArticleVO</display-name>
    <servlet-name>ArticleVO</servlet-name>
    <servlet-class>com.bookshop01.board.vo.ArticleVO</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ArticleVO</servlet-name>
    <url-pattern>/ArticleVO</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>ImageVO</display-name>
    <servlet-name>ImageVO</servlet-name>
    <servlet-class>com.bookshop01.board.vo.ImageVO</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ImageVO</servlet-name>
    <url-pattern>/ImageVO</url-pattern>
  </servlet-mapping>
</web-app>